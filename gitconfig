	email = steven@nuclearsandwich.com
	name = Steven! RagnaroÌˆk

[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = true
	pager = true

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[core]
	pager = less -FRSX
	whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
	excludesfile = /opt/boxen/config/git/gitignore
	autocrlf = input
	safecrlf = true
	editor = vim

[alias]
	co = checkout
	ci = commit
	st = status
	df = diff
	dfx = diff --cached
	lg = log
	rl = reflog
	sh = show
	br = branch
	cn = clone
	l = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
	ll = log --pretty=format:\"%h %ad | %s%d [%an]\" --date=short
	type = cat-file -t
	dump = cat-file -p
	blowup = reset --hard github/master
	cleanup = clean -df
	prmerge = merge --no-ff

[merge]

[hub]
	protocol = https

[credential]
	helper = /opt/boxen/bin/boxen-git-credential

[push]
	default = simple

[filter "lfs"]
	clean = git lfs clean %f
	smudge = git lfs smudge %f
	required = true

[github]
	user = nuclearsandwich
