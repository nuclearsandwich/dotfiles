[giggle]
	main-window-maximized = false
	main-window-geometry = 1916x1057+0+19
	history-view-vpane-position = 650
	file-view-vpane-position = 80
	main-window-view = HistoryView

[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = true
	pager = true

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[core]
	pager = less -FRSX
	whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
	excludesfile = ~/.gitignore
	autocrlf = input
	safecrlf = true

[alias]
	co = checkout
	ci = commit
	st = status
	df = diff
	dfx = diff --cached
	lg = log
	rl = reflog
	sh = show
	br = branch
	cn = clone
	hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
	type = cat-file -t
	dump = cat-file -p
	blowup = reset --hard github/master
	cleanup = clean -df

[github]
	user = nuclearsandwich
	token = {{github_access_token}}

[merge]
	tool = threesome

[mergetool "threesome"]
	cmd = "vim $BASE $LOCAL $REMOTE $MERGED -c 'ThreesomeInit'"
	trustExitCode = true


[init]
	templatedir = ~/.git_template
