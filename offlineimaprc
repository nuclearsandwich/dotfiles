# Sample minimal config file.  Copy this to ~/.offlineimaprc and edit to
# suit to get started fast.

[general]
accounts = nuclearsandwich

[Account nuclearsandwich]
localrepository = nslocal
remoterepository = nsremote

[Repository nslocal]
type = Maildir
localfolders = ~/.maildirs/nuclearsandwich

[Repository nsremote]
type = IMAP
ssl = yes
remotehost = mail.nuclearsandwich.com
remoteport = 993
remoteuser = steven@nuclearsandwich.com

[mbnames]
enabled = yes
filename = ~/.mutt/mailboxes
header = "mailboxes "
peritem = "+%(accountname)s/%(foldername)s"
sep = " "
footer = "\n"
