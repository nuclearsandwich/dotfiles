##! A one line config for dwm's status !##
background no
out_to_console yes
update_interval 1
total_run_times 0
use_spacer none

TEXT
CPU: ${freq_g} ${cpu cpu1}% / ${cpu cpu2}% :: TEMP:${acpitemp}c :: MEM:$memperc% ($mem) :: BATT:${battery} ${battery_time} :: ${time %a %b %d %I:%M%P}

